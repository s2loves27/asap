<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    tools:context=".LoginActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="15dp"

            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/asap"
                android:layout_gravity="center">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:text="실시간 매칭형 아르바이트 플랫폼 ASAP입니다!"
                android:textSize="7pt"
                android:textStyle="bold"
                android:textColor="#000000"
                />



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor = "@color/Mpuple5"
                app:boxStrokeWidthFocused = "1dp"
                app:boxStrokeWidth = "0.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColorHint="@color/gray5"
                android:hint="이메일 주소를 입력해주세요"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_gravity="center" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor = "@color/Mpuple5"
                app:boxStrokeWidthFocused = "1dp"
                app:boxStrokeWidth = "0.5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:textColorHint="@color/gray5"
                android:hint="비밀번호를 입력하세요">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:inputType="textPassword" />


            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/chk_login_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:checked="true"
                android:buttonTint="@color/Mpuple5"
                android:text="로그인 상태 유지" />

            <Button
                android:id="@+id/btn_login_login"
                style="@style/NoPaddingTextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"

                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"



                android:text="로그인하기"
                android:textColor="@color/Mpuple6"
                android:textSize="15pt"
                android:textStyle="bold"
                app:backgroundTint="@color/Mpuple1"/>


            <Button
                android:id="@+id/btn_login_join"
                style="@style/NoPaddingTextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"

                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:text="@string/JOIN"
                android:textColor="@color/gray8"
                android:textSize="6pt"

               />

            <ImageButton
                android:id="@+id/btn_kakao_login"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                app:srcCompat="@drawable/kakao_login_medium_narrow" />
        </LinearLayout>

</LinearLayout>