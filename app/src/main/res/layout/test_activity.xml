<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4F6F6">

        <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:text="지금,\n한시간만\n매칭하세요."
            android:textAppearance="@style/some_id" />

        <ImageView
            android:layout_width="522px"
            android:layout_height="305px"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/image_3">


        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_test_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:tabGravity="center"
            app:tabIndicatorColor="#737373"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#000000"
            app:tabTextColor="#BEBEBE">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MAIN_TAB_ITEM1"
                android:textStyle="bold">

            </com.google.android.material.tabs.TabItem>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MAIN_TAB_ITEM2"
                android:textStyle="bold">

            </com.google.android.material.tabs.TabItem>


        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_more_horiz_24">

            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="10dp"

        app:cardCornerRadius="2dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/subbackground">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"

            android:layout_marginRight="5dp"

            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/test_circle_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:maxHeight="60dp"
                    android:maxWidth="60dp"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circle"
                    app:srcCompat="@drawable/ebichu">

                </com.google.android.material.imageview.ShapeableImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_test_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="left|center_vertical"
                        android:text="전지훈"
                        android:textColor="@color/gray8"
                        android:textSize="7pt">

                    </TextView>


                    <TextView
                        android:id="@+id/tv_test_payment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="200,000원"
                        android:textColor="@color/gray8"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5pt"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_user_info"
                        style="@style/NoPaddingTextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="end|center_vertical"


                        android:text="내 정보 바로가기"
                        android:textColor="@color/Mpuple4"
                        android:textSize="6pt"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_balance_info"
                        style="@style/NoPaddingTextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_weight="1"

                        android:text="내역 확인하기"
                        android:textColor="@color/Mpuple4"
                        android:textSize="6pt"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_test_pager_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn_test_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>