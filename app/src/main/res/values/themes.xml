<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#ffffff</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="scircle">
        <item name="cornerSize">0.1%</item>
    </style>

    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
        <item name="backgroundColor">#ffffff</item>

    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">#2e7d32</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">#ffffff</item>
    </style>
<!--    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.*">-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--    </style>-->

    <style name="some_id">
        <item name="android:textSize">
            25sp
        </item>
        <item name="android:textColor">
            #000000
        </item>
    </style>

    <style name="NoPaddingTextButton" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="NoCircleTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">0dp</item>
        <item name="cornerSize">1%</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="HintTextStyle" parent="@android:style/TextAppearance">

        <item name="android:textSize">4pt</item>
    </style>

    <style name="Myslider.labelStyle" parent="@style/Widget.MaterialComponents.Tooltip">
        <item name="android:background">@color/Mpuple6</item>
    </style>

</resources>